<% include ../../common/html-start.ejs %>
<% include ../../common/head-start.ejs %>
<!--可以添加自定义的样式或者脚本-->
<link rel="stylesheet" href="/js/chosen/chosen.css" type="text/css">
<% include ../../common/head-end.ejs %>

<body class="">
<section class="vbox">
    <!-- 头部 S -->
    <% include ../../common/header.ejs %>
    <!-- 头部 E -->
    <section>
        <section class="hbox stretch">
            <!-- 左边菜单栏 S -->
            <% include ../../common/sidebar-admin.ejs %>
            <!-- 左边菜单栏 E -->
            <!-- 页面主体 S -->
            <section id="content">
                <section class="hbox stretch">
                    <section>
                        <section class="vbox">
                            <!-- 正文内容 S -->
                            <section class="scrollable padder-lg w-f-md" id="bjax-target">
                                <a href="#" class="pull-right text-muted m-t-lg" data-toggle="class:fa-spin"><i
                                            class="icon-refresh i-lg  inline" id="refresh"></i></a>

                                <section class="panel panel-info">
                                    <header class="panel-heading font-bold">
                                        分组信息更改
                                    </header>
                                    <div class="panel-body">
                                        <form data-validate="parsley" action="/admin/group/edit"
                                              class="form-horizontal" method="post">
                                            <input type="hidden" name="_id" value="<%= oldData._id %>">
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label">
                                                    <span style="color:red">*</span>组名称
                                                </label>
                                                <div class="col-sm-8">
                                                    <input name="name" type="text" placeholder="组名称"
                                                           class="form-control" data-required="true"
                                                           value="<%= oldData.name %>"
                                                           data-error-message="组名称不能为空.">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label">
                                                    <span style="color:red">*</span>组长
                                                </label>
                                                <div class="col-sm-8">
                                                    <%- leader %>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label">
                                                    <span style="color:red">*</span>组长权限
                                                </label>
                                                <div class="col-sm-8">
                                                    <%- leaderPower %>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label">
                                                    <span style="color:red">*</span>组员权限
                                                </label>
                                                <div class="col-sm-8">
                                                    <%- memberPower %>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label">
                                                    <span style="color:red">*</span>组描述
                                                </label>

                                                <div class="col-sm-8">
                                                    <textarea name="text" type="text" placeholder="组描述"
                                                              class="form-control" data-required="true"
                                                              value="<%= oldData.text %>"
                                                              data-error-message="组描述." cols="30"
                                                              rows="5"><%= oldData.text %></textarea>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-sm-4 col-sm-offset-2">
                                                    <a href="/admin/group/list" class="btn btn-danger">取消</a>
                                                    <button type="submit" class="btn btn-primary">提交</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </section>
                            </section>
                            <!-- 正文内容 E -->
                            <!-- 页脚 S -->
                            <% include ../../common/footer.ejs %>
                            <!-- 页脚 E -->
                        </section>
                    </section>
                    <a href="#" class="hide nav-off-screen-block" data-toggle="class:nav-off-screen,open"
                       data-target="#nav,html"></a>
                </section>
            </section>
            <!-- 页面主体 E -->
        </section>
    </section>
</section>
<% include ../../common/script-start.ejs %>
<script src="/js/chosen/chosen.jquery.min.js"></script>
<!-- parsley -->
<script src="/js/parsley/parsley.min.js"></script>
<script src="/js/parsley/parsley.extend.js"></script>
<% include ../../common/script-end.ejs %>
</body>

<% include ../../common/html-end.ejs %>
